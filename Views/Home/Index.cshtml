@model WorkFlowManagement.Models.LoginBundle
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        Login - @AppInfo.SoftwareName
    </title>
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- CSS Files -->
    @Styles.Render("~/css")
    <style>
        .intro-3 {
            background: no-repeat #ff3f71;
            background-image: -webkit-linear-gradient(120deg,#9128acc9,#7748fd9c,#ff46a5,#6caafd,#1fe487);
            background-image: -o-linear-gradient(120deg,#9128acc9,#7748fd9c,#ff46a5,#6caafd,#1fe487);
            background-image: linear-gradient(120deg,#9128acc9,#7748fd9c,#ff46a5,#6caafd,#1fe487);
            -webkit-background-size: 800% 400%;
            background-size: 800% 400%;
            -webkit-animation-name: introAnimation;
            animation-name: introAnimation;
            -webkit-animation-duration: 35s;
            animation-duration: 25s;
            -webkit-animation-timing-function: linear;
            animation-timing-function: linear;
            -webkit-animation-delay: 0;
            animation-delay: 0;
            -webkit-animation-iteration-count: infinite;
            animation-iteration-count: infinite
        }

        @@-webkit-keyframes introAnimation {
            0%, 100% {
                background-position: 0 50%
            }

            50% {
                background-position: 100% 50%
            }
        }

        @@keyframes introAnimation {
            0%, 100% {
                background-position: 0 50%
            }

            50% {
                background-position: 100% 50%
            }
        }

        .alert{
            margin-bottom: 35px !important;
        }
    </style>
</head>

<body class="intro-3">
    <div class="wrapper ">
        <div class="container">
            <div class="row" style="align-items: center;min-height: 100vh;">

                <div class="col-lg-6 col-md-6 col-sm-8 ml-auto mr-auto">
                    <div class="card card-login">
                        <div class="card-header card-header-tabs card-header-primary">
                            <h2 class="text-center">@AppInfo.SoftwareName</h2>
                            <h4 class="text-center mb-4">Login</h4>
                            <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper">
                                    <ul class="nav nav-tabs justify-content-center" data-tabs="tabs">
                                        <li class="nav-item">
                                            <a class="nav-link @ViewBag.PrincipalActive" href="#Principal" data-toggle="tab">
                                                Principal
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                        <li class="nav-item ">
                                            <a class="nav-link @ViewBag.HODActive" href="#HOD" data-toggle="tab">
                                                HOD
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                        <li class="nav-item ">
                                            <a class="nav-link @ViewBag.TeacherActive" href="#Teacher" data-toggle="tab">
                                                Faculty
                                                <div class="ripple-container"></div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane @ViewBag.PrincipalActive" id="Principal">
                                    <form method="post" class="p-4">
                                        <input id="WhichLogin" name="WhichLogin" type="hidden" value="1">
                                        @Html.AntiForgeryToken()
                                        <p class="card-description text-center">Login to access Principal Dashboard</p>
                                        @if (ViewBag.PrincipalError != null)
                                        {
                                            <div class="alert alert-danger" role="alert">
                                                Invalid Email or password
                                            </div>
                                        }

                                        <div class="form-group bmd-form-group">
                                            <label for="exampleEmail" class="bmd-label-floating">Email</label>
                                            @Html.EditorFor(model => model.PrincipalCreds.Email, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.PrincipalCreds.Email, "", new { @class = "error" })
                                        </div>
                                        <div class="form-group bmd-form-group">
                                            <label for="exampleEmail" class="bmd-label-floating">Password</label>
                                            @Html.EditorFor(model => model.PrincipalCreds.Password, new { htmlAttributes = new { @class = "form-control" } })
                                            @*@Html.PasswordFor(model => model.PrincipalCreds.Password, new { @class = "form-control form-control-user" })*@
                                            @Html.ValidationMessageFor(model => model.PrincipalCreds.Password, "", new { @class = "error" })
                                        </div>
                                        <div class="mt-4">
                                            <button class="btn btn-block btn-primary">Submit</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="tab-pane @ViewBag.HODActive" id="HOD">
                                    <form method="post" class="p-4">
                                        <input id="WhichLogin" name="WhichLogin" type="hidden" value="2">
                                        @Html.AntiForgeryToken()
                                        <p class="card-description text-center">Login to access HOD Dashboard</p>
                                        @if (ViewBag.HODError != null)
                                        {
                                            <div class="alert alert-danger" role="alert">
                                                Invalid Email or password
                                            </div>
                                        }
                                        <div class="form-group bmd-form-group">
                                            <label for="exampleEmail" class="bmd-label-floating">Email</label>
                                            @Html.EditorFor(model => model.HodCreds.Email, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.HodCreds.Email, "", new { @class = "error" })
                                        </div>
                                        <div class="form-group bmd-form-group">
                                            <label for="exampleEmail" class="bmd-label-floating">Password</label>
                                            @Html.EditorFor(model => model.HodCreds.Password, new { htmlAttributes = new { @class = "form-control" } })
                                            @*@Html.PasswordFor(model => model.HodCreds.Password, new { @class = "form-control form-control-user" })*@
                                            @Html.ValidationMessageFor(model => model.HodCreds.Password, "", new { @class = "error" })
                                        </div>
                                        <div class="mt-4">
                                            <button class="btn btn-block btn-primary">Submit</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="tab-pane @ViewBag.TeacherActive" id="Teacher">
                                    <form method="post" class="p-4">
                                        <input id="WhichLogin" name="WhichLogin" type="hidden" value="3">
                                        @Html.AntiForgeryToken()
                                        <p class="card-description text-center">Login to access Faculty Dashboard</p>
                                        @if (ViewBag.TeacherError != null)
                                        {
                                            <div class="alert alert-danger" role="alert">
                                                Invalid Email or password
                                            </div>
                                        }
                                        <div class="form-group bmd-form-group">
                                            <label for="exampleEmail" class="bmd-label-floating">Email</label>
                                            @Html.EditorFor(model => model.FacultyCreds.Email, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.FacultyCreds.Email, "", new { @class = "error" })
                                        </div>
                                        <div class="form-group bmd-form-group">
                                            <label for="exampleEmail" class="bmd-label-floating">Password</label>
                                            @Html.EditorFor(model => model.FacultyCreds.Password, new { htmlAttributes = new { @class = "form-control" } })
                                            @*@Html.PasswordFor(model => model.FacultyCreds.Password, new { @class = "form-control form-control-user" })*@
                                            @Html.ValidationMessageFor(model => model.FacultyCreds.Password, "", new { @class = "error" })
                                        </div>
                                        <div class="mt-4">
                                            <button class="btn btn-block btn-primary">Submit</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/script")
    @Scripts.Render("~/bundles/jqueryval")


</body>

</html>