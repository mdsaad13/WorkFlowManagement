@{
    ViewBag.Title = "Add Faculty";
    ViewBag.FacultyActive = "active";
    ViewBag.ShowPassField = true;
}

<div class="row">
    <div class="col-12">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">@ViewBag.Title</h4>
                    <p class="card-category">Enter Details</p>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("AddFaculty", "Hod", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        Html.RenderPartial("Partials/_FacultyForm");

                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary pull-right">Add Faculty</button>
                            <div class="clearfix"></div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>